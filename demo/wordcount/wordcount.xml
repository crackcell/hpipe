<?xml version="1.0"?>

<flow name="wordcount">

  <node>
    <name>step1.1</name>
    <resource>demo/wordcount/task/step1.xml</resource>
    <property>
      <name>bizdate</name>
      <value>${today-1d}</value>
    </property>
  </node>

  <node>
    <name>step1.0</name>
    <resource>demo/wordcount/task/step1.xml</resource>
    <property>
      <name>bizdate</name>
      <value>${today-0d}</value>
    </property>
  </node>

  <node>
    <name>step2</name>
    <resource>demo/wordcount/task/step2.xml</resource>
  </node>

  <node>
    <name>step3</name>
    <resource>demo/wordcount/task/step3.xml</resource>
    <depend>step1.0</depend>
    <depend>step1.1</depend>
    <depend>step2</depend>
  </node>

</flow>
